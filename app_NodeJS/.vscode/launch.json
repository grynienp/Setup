{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "node_Attach",
      "port": 3001,
      "protocol": "inspector",
      "restart": true,
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon(Server)",
      "runtimeExecutable": "nodemon",
      "args": [
        "./src/server.js",
        "--exec",
        "babel-node"
      ],
      //"program": "${file}", //Go to the file you want to debug/js project root and then start this debugger
      //"localRoot": "${workspaceFolder}/src/server.js",
      //"console": "integratedTerminal", //Careful: setting both nodemons to use this will cause a clash. Just dont have them use a console at all. If you want to see the nodemon output, set the console to "externalTerminal". This will launch a new cmd.exe sessions for each nodemon instance.
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "skipFiles": [
        "node_modules/**/*.js"
      ],
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon(Client)",
      "runtimeExecutable": "nodemon",
      "args": [
        "./src/client.js",
        "--exec",
        "babel-node"
      ],
      //"console": "integratedTerminal", //Careful: setting both nodemons to use this will cause a clash. Just dont have them use a console at all. If you want to see the nodemon output, set the console to "externalTerminal". This will launch a new cmd.exe sessions for each nodemon instance.
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "skipFiles": [
        "node_modules/**/*.js"
      ],
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "Fullstack",
      "configurations": [
        "nodemon(Server)",
        "nodemon(Client)"
      ]
    }
  ]
}