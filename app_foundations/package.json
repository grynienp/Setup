{
  "name": "homebase",
  "version": "1.0.0",
  "description": "A barebones scaffold for modern webdev projects.",
  "main": "index.js",
  "scripts": {
    "watch-sass": "npx node-sass --watch --recursive src/styles --output dist/styles --source-map true",
    "build-sass": "npx node-sass src/styles --output dist/styles --source-map true --source-map-contents scss",
    "document-sass:html": "rm -rf ./docs/styles & npx sassdoc src/styles -d docs/styles",
    "publish-sass": "npm-run-all -s build-sass document-sass:html",
    "watch-js": "npx nodemon --inspect-brk=9229 ./src/js/index.js",
    "build-js": "rm -rf ./dist/js & cp -r ./src/js dist",
    "document-js:html": "rm -rf ./docs/js & npx documentation build src/js/** -f html -o docs/js",
    "publish-js": "npm-run-all -s build-js document-js:html",
    "start-dev": "npm-run-all --parallel watch-js watch-sass",
    "start": "npm-run-all -s security publish-js publish-sass",
    "share": "npm-run-all -s start localtunnel",
    "security": "npx nsp check --reporter summary",
    "localtunnel": "npx lt --port 3000 --localhost test --subdomain nickgogan",
    "serve": "npx lite-server"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "documentation": "5.3.5",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "lite-server": "2.3.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.3",
    "nsp": "^3.1.0",
    "prettier": "^1.9.1",
    "prettier-eslint": "^8.7.0",
    "sassdoc": "2.5.0"
  }
}
