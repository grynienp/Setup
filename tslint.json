{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier",
    "tslint-eslint-rules"
  ],
  "rules": {
    "max-line-length": [true, 80],
    "angular-whitespace": [
      true,
      "check-interpolation",
      "check-semicolon"
    ],
    "no-attribute-parameter-decorator": true,
    "no-output-on-prefix": true,
    "no-forward-ref": true,

    "no-constant-condition": true,
    "directive-selector": [true, "attribute", "higgs", "camelCase"],
    "component-selector": [true, "element", "higgs", "kebab-case"]
  }
}
